<h1>Advanced Search</h1>

<%= form_for @search, html: {clasas: "pure-form"} do |s| %>

  <div class="field">
    <%= s.label :keywords %><br /%>
    <%= s.text_field :keywords %>
  </div>

    <div class="field">
    <%= s.label :ingredients %><br /%>
    <%= s.text_field :ingredients %>
  </div>

    <div class="field">
   <%= s.label :meal_type, "Meal Type" %> <br />
      <%= s.select :meal_type, options_for_select(@meal_types), :include_blank => true %>
  </div>

    <div class="field">
    <p><%= s.label :cuisine_type, "Cuisine Type" %> - <%= s.text_field :cuisine_type %> </p>
  </div>

  <div class= "actions"><%= s.submit "Search", class: "pure-button pure-button-primary" %></div>
  <% end %>

  <p><%= link_to 'Back', recipes_path %></p>