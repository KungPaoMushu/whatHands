.main_content
	#recipe_top.row
		.col-md-4
			= image_tag @recipe.image.url.to_s, class: "recipe_image"
		.col-md-8
			#recipe_info
				%h1= @recipe.title
				%p.description= @recipe.description
				%p.cuisine_type= @recipe.cuisine_type
				%p.meal_type= @recipe.meal_type
				%p
					Submitted by
					= @recipe.user.email

	.row
		.col-md-6
			#ingredients
				%h2 Ingredients
				%ul
					- @recipe.ingredients.each do |ingredient|
						%li= ingredient.name
						%li= ingredient.quantity
						%li= ingredient.unit



		.col-md-6
			#directions
				%h2 Directions
				%ul
					- @recipe.directions.each do |direction|
						%li= direction.step
	.row
		.col-md-12
			= link_to "Back", root_path, class: "btn btn-default"
			- if user_signed_in?
				= link_to "Edit", edit_recipe_path, class: "btn btn-default"
				= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default"

	.row
		.col-md-12
		%div.comments-container
			= render partial: "comments/template", locals: {commentable: @recipe, new_comment: @comment}


